{
  "name": "zenite-v2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:webpack": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "ci": "npm run lint && npm run typecheck && npm run prisma:generate && npm run build",
    "postinstall": "prisma generate && bash ./scripts/install-git-hooks.sh",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev --name init",
    "prisma:db:push": "prisma db push",
    "seed:dev": "node prisma/seed.js",
    "seed:reset": "node prisma/seed-reset.mjs",
    "db:start": "docker compose up -d db",
    "db:stop": "docker compose down",
    "tailwind:build": "npx tailwindcss -c tailwind.config.cjs -i ./src/app/globals.css -o ./public/tailwind.css",
    "tailwind:watch": "npx tailwindcss -c tailwind.config.cjs -i ./src/app/globals.css -o ./public/tailwind.css --watch",
    "test": "jest --passWithNoTests --runInBand",
    "test:pattern": "jest --passWithNoTests --runInBand",
    "install:hooks": "bash ./scripts/install-git-hooks.sh"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "dependencies": {
    "@clerk/nextjs": "^5.7.5",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "nanoid": "^4.0.0",
    "next": "15.5.2",
    "next-auth": "^4.22.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-toastify": "^11.0.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "theme-change": "^2.5.0",
    "three": "^0.158.0",
    "vaul": "^1.1.2",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/three": "^0.179.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.1.2",
    "daisyui": "^5.1.9",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "postcss": "^8.5.6",
    "prisma": "^5.22.0",
    "shadcn": "^3.0.0",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.4.1",
    "typescript": "^5"
  }
}
